<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/name"
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_marginTop="290px"
        android:hint="Ievadiet savu speles vardu"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />


    <TextView
        android:id="@+id/Displayname"
        android:layout_marginTop="200px"
        android:text=""
        android:textSize="70px"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:textColor="@android:color/black"
            android:textSize="110px"
            android:textStyle="bold"
            tools:text="" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="100px"
            android:useDefaultMargins="true"
            android:layout_centerInParent="true"
            android:rowCount="3"
            android:columnCount="3"
            android:id="@+id/addlay"
            />

        <Button
            android:id="@+id/res"
            android:layout_width="250px"
            android:layout_height="200px"

            android:layout_marginBottom="10px"
            android:layout_marginLeft="30px"
            android:text="Restartet"

            android:background="@color/orange"
            android:layout_alignParentBottom="true"

             />

        <Button
            android:id="@+id/poga"
            android:layout_marginLeft="800px"
            android:layout_marginBottom="10px"
            android:layout_width="250px"
            android:layout_height="200px"

            android:layout_alignParentBottom="true"
            android:background="@color/orange"
            android:onClick="ButtonClick"
            android:text="press me for special message" />
        <Button
            android:layout_width="250px"
            android:layout_height="200px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="420px"
            android:text="Sakt"
            android:background="@color/orange"
            android:layout_alignParentBottom="true"
            android:id="@+id/irnav"
            android:onClick="Click"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>